#include<iostream>
#include<map>
using namespace std;
namespace tmwp
{
class Request
{
public:
char *method;
char *resource;
char isClientSideTechnologyResource;
char *mimeType;
int dataCount;
char **data;
string forwardTo;
string get(string name);
void forward(string forwardTo);
map<string,string> keyValues;
void setValue(string k,string v);
string getValue(string k);
};
class Response
{ 
int clientSocketDescriptor;
bool isClosed;
bool headerCreated;
void createHeader();
public:
Response(int clientSocketDescriptor);
void write(const char *str);
void write(string str);
void close();
};

class TMWebProjector
{
private:
int portNumber;
//char *url;
map<string,void (*)(Request &,Response &)> RequestMappings;
public:
TMWebProjector(int portNumber);
~TMWebProjector();
void start(); 
void onRequest(string url,void (*ptrOnRequest)(Request &,Response &));
};
}